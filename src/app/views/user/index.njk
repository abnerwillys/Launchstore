{% extends "layout.njk" %}

{% block content %}

  <section class="user-dashboard container form">
    <form method="POST" action="/users?_method=PUT">
    
      <div class="header">
       <h3>Detalhes</h3>
      </div>

      <div class="fields">
        {% include 'user/fields.njk' %}

        <input 
          type="hidden" 
          name="id" 
          value="{{ user.id }}"
        >
      </div>

      <button class="button edit" type="submit">Atualizar</button>
    </form>

    <form id="form-delete" method="POST" action="/users?_method=DELETE">
      <input 
        type="hidden" 
        name="id" 
        value="{{ user.id }}"
      >
      <button class="button delete" type="submit">Delete</button>
    </form>
  </section>
{% endblock content %}

{% block scripts %} 
  <script src="/alert-delete.js"></script>
{% endblock  %}